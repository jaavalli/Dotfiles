#include "/home/ville/.xutils/colors/default"

! *background: #121212
Xft.dpi:                 102
Xft.antialias:           1
Xft.hinting:             1
Xft.hintstyle:           hintslight
Xft.rgba:                rgb
Xft.lcdfilter:           lcddefault

!dzen2.font:       Termsyn
dzen2.foreground: #22EE11
dzen2.background: green

*geometry:          120x52

URxvt*imLocale:          fi_FI.utf8
URxvt.bigfont_key:       o
URxvt.borderLess:        no
URxvt.buffered:          false
URxvt.depth:             32
!URxvt.font:              xft:Termsyn:pixelsize=18:style=Regular
! URxvt.italicFont:        xft:Monospace:style=Oblique:pixelsize=10
URxvt.hold:              true
URxvt.internalBorder:    0
URxvt.jumpScroll:        true
URxvt.keysym.C-i:        perl:url-select:select_next
URxvt.letterSpace:       0
URxvt.loginShell:        true
URxvt.perl-ext:          default,url-select
URxvt.scrollBar:         off
URxvt.scrollTtyKeypress: off
URxvt.scrollTtyOutput:   off
URxvt.secondaryScreen:   false
URxvt.skipScroll:        true
URxvt.smallfont_key:     p
URxvt.tripleclickwords:  on
URxvt.url-select.launcher:  google-chrome-stable
URxvt.url-launcher:	google-chrome 
URxvt.url-select.underline: true
URxvt.perl-ext-common:  default,matcher,vtwheel,font-size, clipboard
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.matcher.button: 1
URxvt.iso14755: false
URxvt.iso14755_52: false

XTerm*borderWidth: 0
XTerm*termName: rxvt
XTerm*locale: true
XTerm*metaSendsEscape: true
XTerm*saveLines: 4096
XTerm*jumpScroll: true
XTerm*multiScroll: true

!URxvt*keysym.Control-Up:    \033[1;5A
!URxvt*keysym.Control-Down:  \033[1;5B
!URxvt*keysym.Control-Left:  \033[1;5D
!URxvt*keysym.Control-Right: \033[1;5C
URxvt.keysym.C-Right:     perl:font-size:increase
URxvt.keysym.C-Left:   perl:font-size:decrease
URxvt.keysym.C-S-Right:   perl:font-size:incglobal
URxvt.keysym.C-S-Left: perl:font-size:decglobal

URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

*saveLines:1000
